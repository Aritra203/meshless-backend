{
  "info": {
    "name": "Meshless Backend",
    "_postman_id": "meshless-backend-collection",
    "description": "Requests for the Meshless Backend (no P2P, no Postgres).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base}}/api/auth/register",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Demo\", \"email\": \"demo@example.com\", \"password\": \"Demo@123\", \"role\": \"provider\"}"
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base}}/api/auth/login",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"provider@example.com\", \"password\": \"Provider@123\"}"
        }
      }
    },
    {
      "name": "Create Codes",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/api/provider/codes",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "provider",
            "codes"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"totalMB\": 500, \"count\": 2, \"expireHours\": 24}"
        }
      }
    },
    {
      "name": "Authorize Code",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/api/gateway/authorize-code",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "gateway",
            "authorize-code"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"code\": \"REPLACE_WITH_CODE\"}"
        }
      }
    },
    {
      "name": "Report Usage",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/api/gateway/report-usage",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "gateway",
            "report-usage"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"code\": \"REPLACE_WITH_CODE\", \"bytes\": 262144}"
        }
      }
    },
    {
      "name": "Leaderboard",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "{{base}}/api/leaderboard",
          "host": [
            "{{base}}"
          ],
          "path": [
            "api",
            "leaderboard"
          ]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "base",
      "value": "http://localhost:8080"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}